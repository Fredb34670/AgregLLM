{
  "manifest_version": 3,
  "name": "AgregLLM",
  "version": "1.1.0",
  "description": "Une extension pour agréger les discussions de vos LLM préférés.",
  "icons": {
    "16": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendor/browser-polyfill.js", "scripts/content.js"]
    },
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*"],
      "js": ["vendor/browser-polyfill.js", "scripts/sync.js"]
    }
  ],
  "action": {
    "default_title": "AgregLLM",
    "default_popup": "popup.html"
  }
}