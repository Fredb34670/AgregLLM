{
  "manifest_version": 3,
  "name": "AgregLLM",
  "version": "1.1.5",
  "description": "Une extension pour agréger les discussions de vos LLM préférés.",
  "icons": {
    "16": "icon-192.png",
    "48": "icon-192.png",
    "128": "icon-512.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendor/browser-polyfill.js", "scripts/content.js"]
    },
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "https://fredb34670.github.io/AgregLLM/*"],
      "js": ["vendor/browser-polyfill.js", "scripts/sync.js"]
    }
  ],
  "action": {
    "default_title": "AgregLLM",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-192.png",
      "48": "icon-192.png",
      "128": "icon-512.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "assets/*",
        "test.html"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}