{
  "manifest_version": 3,
  "name": "AgregLLM",
  "version": "0.1.0",
  "description": "Une extension pour agréger les discussions de vos LLM préférés.",
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*", 
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*"
      ],
      "js": ["vendor/browser-polyfill.js", "scripts/url_detector.js", "scripts/content.js"]
    },
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*"],
      "js": ["vendor/browser-polyfill.js", "scripts/sync.js"]
    }
  ],
  "action": {
    "default_title": "AgregLLM",
    "default_popup": "popup.html"
  }
}