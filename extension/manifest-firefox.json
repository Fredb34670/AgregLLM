{
  "manifest_version": 2,
  "name": "AgregLLM",
  "version": "1.1.5",
  "description": "Agregateur de discussions LLM",
  "icons": {
    "48": "icon-192.png",
    "96": "icon-192.png",
    "128": "icon-192.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "notifications",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["vendor/browser-polyfill.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["vendor/browser-polyfill.js", "scripts/content.js"]
    },
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "https://fredb34670.github.io/AgregLLM/*"],
      "js": ["vendor/browser-polyfill.js", "scripts/sync.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon-192.png",
      "96": "icon-192.png"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "index.html",
    "assets/*",
    "test.html"
  ]
}
