{
  "manifest_version": 2,
  "name": "AgregLLM",
  "version": "0.1.0",
  "description": "Une extension pour agréger les discussions de vos LLM préférés (pour Firefox).",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": ["vendor/browser-polyfill.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["vendor/browser-polyfill.js", "scripts/url_detector.js", "scripts/content.js"]
    }
  ],
  "browser_action": {
    "default_title": "AgregLLM",
    "default_popup": "popup.html"
  }
}
