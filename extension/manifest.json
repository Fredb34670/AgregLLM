{
  "manifest_version": 3,
  "name": "AgregLLM",
  "version": "0.1.0",
  "description": "Une extension pour agréger les discussions de vos LLM préférés.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AgregLLM",
    "default_popup": "popup.html"
  }
}
