{
  "manifest_version": 2,
  "name": "AgregLLM",
  "version": "1.0.2",
  "description": "Agr√©gateur de discussions LLM",
  "permissions": [
    "storage",
    "contextMenus",
    "tabs",
    "activeTab",
    "https://chatgpt.com/*",
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://aistudio.google.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "scripts": ["vendor/browser-polyfill.js", "background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*", 
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://aistudio.google.com/*"
      ],
      "js": ["vendor/browser-polyfill.js", "scripts/content.js"]
    },
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*"],
      "js": ["vendor/browser-polyfill.js", "scripts/sync.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  }
}
